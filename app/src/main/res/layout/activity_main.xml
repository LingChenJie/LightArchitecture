<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.page.activity.MviActivity">

    <com.android.architecture.ui.widget.layout.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/theme_color"
        app:title_text="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layout_mvi"
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:elevation="4dp"
                app:cardBackgroundColor="#66CC33"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/mvi"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layout_common"
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:elevation="4dp"
                app:cardBackgroundColor="#3399FF"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/common"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>