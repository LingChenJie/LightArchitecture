<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.android.architecture.ui.widget.layout.TitleView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/theme_color"
        app:title_text="@string/transaction" />

    <Button
        android:id="@+id/btn_nested_scrolling_tradition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="嵌套滑动传统机制" />

    <Button
        android:id="@+id/btn_nested_scrolling2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nested Scrolling2" />

    <Button
        android:id="@+id/btn_nested_coordinator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Behavior的嵌套滑动" />

    <Button
        android:id="@+id/bt_nested_demo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nested demo1" />

</LinearLayout>