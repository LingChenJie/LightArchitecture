<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    tools:background="@color/black">

    <LinearLayout
        android:id="@+id/back_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_16">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/icon_back_white" />

        <TextView
            android:id="@+id/back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            tools:text="android" />

    </LinearLayout>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_64"
        android:layout_marginEnd="@dimen/dp_64"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        tools:text="android" />

    <LinearLayout
        android:id="@+id/arrow_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/action1_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_8"
            android:contentDescription="@null"
            android:padding="@dimen/dp_5"
            android:scaleType="centerInside"
            android:visibility="gone"
            tools:src="@drawable/icon_add_white" />

        <ImageView
            android:id="@+id/action2_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_12"
            android:contentDescription="@null"
            android:padding="@dimen/dp_5"
            android:scaleType="centerInside"
            android:visibility="gone"
            tools:src="@drawable/icon_ok_white" />

        <TextView
            android:id="@+id/arrow_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            tools:text="android" />

        <ImageView
            android:id="@+id/arrow_icon"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_8"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            tools:src="@drawable/icon_arrow_white" />

    </LinearLayout>

    <com.hjq.shape.layout.ShapeLinearLayout
        android:id="@+id/timer_view"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_23"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:gravity="center"
        android:visibility="gone"
        app:shape_radius="@dimen/dp_23"
        app:shape_strokeColor="@color/white"
        app:shape_strokeWidth="@dimen/dp_1">

        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_9"
            android:textStyle="bold"
            tools:text="60" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_unit"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_9" />

    </com.hjq.shape.layout.ShapeLinearLayout>

</RelativeLayout>